@article{Asorey2016,
abstract = {Photometric surveys produce large-area maps of the galaxy distribution, but with less accurate redshift information than is obtained from spectroscopic methods. Modern photometric redshift (photo-z) algorithms use galaxy magnitudes, or colors, that are obtained through multi-band imaging to produce a probability density function (PDF) for each galaxy in the map. We used simulated data to study the effect of using different photo-z estimators to assign galaxies to redshift bins in order to compare their effects on angular clustering and galaxy bias measurements. We found that if we use the entire PDF, rather than a single-point (mean or mode) estimate, the deviations are less biased, especially when using narrow redshift bins. When the redshift bin widths are {\$}\backslashDelta z=0.1{\$}, the use of the entire PDF reduces the typical measurement bias from 5{\%}, when using single point estimates, to 3{\%}.},
annote = {The good: The intro has a nice review of papers that made use of photo-z PDFs for several applications. They compare using the full PDF to using the mean and mode (and median, and a single random sample), the same two ideas I had for what point estimate into which others might think to reduce full PDFs. They obtain N(z) and the angular correlation function and then extract the galaxy bias as a quantitative measure of how big a difference it makes to use the full PDF, but they do so with point estimates of those parameters rather than treating them like probabilistic objects. They calculated the angular correlation function both with pixel counts and pair counts, ostensibly extending the pixel method to incorporate inclusion probabilities (although no explicit equation is provided and it sounds wrong). The bad: They use TPZ, a random forest method, to get photo-z PDFs (posteriors, I think), but that method does not produce an interim prior (I think, again). They describe the photo-z PDFs in terms of Gaussian statistics but also show a non-Gaussian example, so it's unclear to what degree they're assuming Gaussianity. Though they acknowledge introducing a bias into the clustering amplitude, they include galaxies in each redshift bin over which the angular correlation is calculated only if their PDF in that bin exceeds a threshold, claiming that this reduces noise, which looks like it will destroy the normalization of N(z) and violates the probabilistic aspect of the catalog.  The ugly: They never specify photo-z PDFs as posteriors or likelihoods, and as you noted there are no equations involving conditional probabilities. The photo-z PDFs are stacked to get N(z), but the rest of the calculation of the angular correlation function uses the same catalog of galaxies divided among bins deterministically. They never address the obvious systematics in the measure of the galaxy bias nor the N(z) estimate.},
archivePrefix = {arXiv},
arxivId = {1601.00357},
author = {Asorey, J. and Kind, M. Carrasco and Sevilla-Noarbe, I. and Brunner, R. J. and Thaler, J.},
eprint = {1601.00357},
journal = {Mon. Not. R. Astron. Soc.},
month = {jan},
title = {{Galaxy clustering with photometric surveys using PDF redshift information}},
url = {http://arxiv.org/abs/1601.00357},
year = {2016}
}
